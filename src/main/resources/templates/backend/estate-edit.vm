<button type="submit" class="btn btn-danger btn-sm pull-right" 
onClick="return confirm('Are you sure you want to remove family association from estate record?');"
name="_submit_family_remove_${family.id}">
<b class="fa fa-remove"></b>
</button>
</td>
</tr>
#end
</tbody>
</table>
<button type="submit" class="btn btn-primary btn-sm" name="_submit_add_family">
<b class="fa fa-plus"></b> Add family association
</button>
</div>


##
## Houses
##
<a name="houses"></a>
<div class="form-group">
<label for="properties">Houses</label>
#parse ("_estate_houses_table.vm")
<input type="submit" class="btn btn-primary btn-sm" name="_submit_new_house"
value="Add new house record" />
<input type="submit" class="btn btn-primary btn-sm" name="_submit_existing_house"
value="Associate existing house record" />
</div>



##
## Employee Records
##
#if($PROJECT_ID=="ERDB")
<div class="form-group">
<label for="properties">Historical Employee Records</label>
#parse ("/backend/_employee_record_reference_table.vm")
#parse("_employee_record_table.vm")
<a class="btn btn-primary btn-sm" href="employee-record-add.jsp?estate_id=${estate.id}">Add employee record</a>
</div>
#end


##
## References
##
<a name="references"></a>
<div class="form-group">
<label for="references">References</label>
#parse ("_estate_reference_table.vm")
<input type="submit" class="btn btn-primary btn-sm" name="_submit_new_reference"
value="Add reference" />
</div>


<input type="submit" class="btn btn-primary" value="Save" />
</form>

<script>
var needToSave = false;
jQuery(function(){
	$(document).click("a", function(event){
		if (needToSave == true) {
			alert("You need to save first");
			event.preventDefault();
			return;
		}
	});
});
</script>
