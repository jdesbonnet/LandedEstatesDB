<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
    
        <!-- Database connection settings -->

        
        <property name="show_sql">false</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>


	<!-- Mapping files -->
	<mapping resource="Family.hbm.xml"/>
	<mapping resource="Estate.hbm.xml"/>
	<mapping resource="Property.hbm.xml"/>
	<mapping resource="Reference.hbm.xml" />
	<mapping resource="ReferenceSource.hbm.xml" />
	<mapping resource="ReferenceCategory.hbm.xml" />
	<mapping resource="ObjectHistory.hbm.xml" />
	<mapping resource="User.hbm.xml" />
	<mapping resource="ImageDB.hbm.xml" />
	<mapping resource="Barony.hbm.xml" />
	<mapping resource="HeatMapRecord.hbm.xml" />
	<mapping resource="EmployeeRecord.hbm.xml" />

    </session-factory>
    
    
</hibernate-configuration>
