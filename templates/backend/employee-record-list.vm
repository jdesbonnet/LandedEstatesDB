#parse ("/backend/_header.vm")

<div class="a-z">
|&nbsp;
#foreach ($l in $alphabet)
	#if ($l == $letter)
	<b>$l</b>
	#else
	<a href="employee-record-list.jsp?letter=$l&p=$!phase">$l</a>
	#end
	&nbsp;|&nbsp;
#end

<br />

<a href="employee-record-list.jsp?letter=_all&p=$!phase">List all employee records</a>

</div>

#if ($employeeRecords) 
<table border="1" class="listTable">
<thead>
<tr>
<th>ID</td>
<th>House name</th>
<th>Description</th>
<th>References</th>
<th>Tags</th>
<th style="width:80px;">Actions</th>
</tr>
</thead>

#foreach ($er in $employeeRecords) 
<tr>
<td>${er.id}</td>
<td><a href="house-show.jsp?id=${er.house.id}">${er.house.name}</a></td>
<td>${er.description}</td>

<td><ul>
#foreach ($tag in $er.getTags)
<li>${tag.name}</li>
#end
</ul>
</td>

<td><ul>
#foreach ($ref in $er.getReferences)
<li>${ref.name}</li>
#end
</ul>
</td>


<td>
<a href="employee-record-edit.jsp?id=${er.id}">edit</a></td>
</tr>
#end
</table>

#else
no records
#end


#parse ("/backend/_footer.vm")
