$breadcrumbs.add("Reference Sources","refsource-list.jsp").add($source.name)

<form action="refsource-edit-submit.jsp" method="POST">
<input type="hidden" name="id" value="$!{source.id}" />

<div class="form-group">
<label for="field_name">Source name</label>
<input type="text" class="form-control" size="40" id="field_name" name="name"
value="$!{source.name}" />
</div>


<div class="form-group">
<label for="field_description">Description</label>
<textarea id="field_description" name="description" class="form-control" 
rows="5" cols="60">$!{source.description}</textarea>
</div>

<div class="form-group">
<label for="field_category_id">Category</label>
<select name="category_id" id="field_category_id" class="form-control">
#foreach ($category in $categories)
#if ($category.getId() == $source.getCategory().getId())
<option value="${category.id}" selected="yes">${category.name}</option>
#else
<option value="${category.id}">${category.name}</option>
#end
#end
</select>
</div>


<div class="form-group">
<label for="field_contact_person">Contact person</label>
<input type="text" class="form-control" size="40" id="field_contact_person" name="contact_person"
value="$!source.contactPerson" />
</div>

<div class="form-group">
<label for="field_contact_telephone">Contact telephone</label>
<input type="text" class="form-control" size="40" id="field_contact_telephone" name="contact_telephone"
value="$!source.getContactTelephone()" />
</div>

<div class="form-group">
<label for="field_contact_email">Contact email</label>
<input type="text" class="form-control" size="40" id="field_contact_email" name="contact_email"
value="$!source.getContactEmail()" />
</div>


<input type="submit" class="btn btn-primary" value="Submit" />
</form>


