#macro( search_result_item $r )
#set ($resultClass=$r.class.name)
#if ($resultClass.startsWith("ie.wombat.landedestates.House"))
<a href="house-show.jsp?id=$r.id">H${r.id}</a>
<b>${r.name}</b> 
${r.description}

#elseif ($resultClass=="ie.wombat.landedestates.EmployeeRecord")
(<a href="employee-record-edit.jsp?id=$r.id">ER${r.id}</a>)
${r.description} 

#elseif ($resultClass.startsWith("ie.wombat.landedestates.Estate"))
<b>${r.name}</b> 
(<a href="estate-show.jsp?id=${r.id}">E${r.id}</a>) 
${r.description}

#elseif ($resultClass.startsWith("ie.wombat.landedestates.Family"))
<b>${r.name}</b> 
(<a href="family-show.jsp?id=${r.id}">F${r.id}</a>) 
$!{r.description}

#elseif ($resultClass.startsWith("ie.wombat.landedestates.Reference"))
<a href="reference-show.jsp?id=${r.id}">R${r.id}</a>
${r.source.name}
${r.description}
#else
? $resultClass $r.id
#end

#end
##end macro