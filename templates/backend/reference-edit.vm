$breadcrumbs.add("Estates","estate-list.jsp").add("$estate.name","estate-show.jsp?id=$estate.id").add("edit reference")

<form action="reference-edit-submit.jsp" method="POST">

<input type="hidden" name="id" 
value="$!{reference.id}" />
<input type="hidden" name="estate_id"
value="${estate.id}" />

<div class="form-group">
<label for="field_description">Reference description</label>
<textarea id="field_description" name="description" class="form-control"
rows="5" cols="60" wrap="virtual">$!{reference.description}</textarea>
</div>

##<button type="button" onClick="questionToQuoteMark('field_description')">convert ? to '</button>


<div class="form-group">
<label for="field_source_id">Source</label>
<select id="field_source_id" name="source_id" class="form-control">
<option value=""> ** Unknown reference source **</option>
#foreach ($source in $referenceSources)
<option value="$source.getId()"
	#if ($source.id == $reference.source.id)
		selected="yes"
	#end
>${source.name}</option>
#end
</select>
</div>

<div class="form-group">
<input class="btn btn-primary" type="submit" value="Save" />
</div>
</form>


